{
  "manifest_version": 3,
  "name": "NYT Spelling Bee Buddy Embedder",
  "version": "1.6.0",
  "description": "Embeds the Grid and Two-Letter List from NYT Spelling Bee Buddy directly into the Spelling Bee game page for convenient reference while playing.",
  "author": "mmmorks",
  "homepage_url": "https://github.com/mmmorks/spelling-bee-buddy-extension",

  "icons": {
    "16": "icons/icon-48.png",
    "32": "icons/icon-48.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/puzzles/spelling-bee*"],
      "js": ["constants.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.nytimes.com/interactive/*/upshot/spelling-bee-buddy.html*"],
      "js": ["constants.js", "iframe-content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "host_permissions": [
    "https://www.nytimes.com/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "spelling-bee-buddy@mmmorks.net",
      "strict_min_version": "109",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
