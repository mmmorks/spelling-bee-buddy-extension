{
  "manifest_version": 2,
  "name": "NYT Spelling Bee Buddy Embedder",
  "version": "1.3.0",
  "description": "Embeds the Grid and Two-Letter List from NYT Spelling Bee Buddy directly into the Spelling Bee game page for convenient reference while playing.",
  "author": "mmmorks",
  "homepage_url": "https://github.com/mmmorks/spelling-bee-buddy-extension",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["https://www.nytimes.com/puzzles/spelling-bee*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "https://www.nytimes.com/puzzles/spelling-bee*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "spelling-bee-buddy@mmmorks.net",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
